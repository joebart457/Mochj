<Window x:Class="Mochj.IDE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mochj.IDE"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="Btn_HighlightCode"
                Grid.Row="0"
                Content="Highlight" Click="Btn_HighlightCode_Click"></Button>
        <RichTextBox x:Name="RTB_CodeArea"
                     Grid.Row="1"
                     PreviewKeyDown="tb_PreviewKeyDown"/>
        <Popup x:Name="Popup_CodeCompletion" 
                AllowsTransparency="True"  
                PlacementTarget="{Binding ElementName=ToggleButton}" 
                IsOpen="{Binding ElementName=ToggleButton, Path=IsChecked}" 
                Opened="Popup_OnOpened">
            <StackPanel>
                <ListBox x:Name="LB_CodeSuggestions" 
                         Height="100"
                         Width="120"
                         SelectedIndex="{Binding CCSelectedIndex}">
                </ListBox>
            </StackPanel>
        </Popup>
    </Grid>
</Window>
